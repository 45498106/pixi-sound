{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "./.docs/"
        ],
        "includePattern": ".+\\.js?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks"   : false,
        "monospaceLinks": false,
        "default"       : {
            "outputSourceFiles" : false
        },
        "applicationName": "PIXI.sound",
        "footer"        : "Made with â™¥ by Matt Karl (github.com/bigtimebuddy)",
        "copyright"     : "PIXI Copyright &copy; 2017 Matt Karl.",
        "linenums"      : true
    },
    "markdown"  : {
        "parser"        : "gfm",
        "hardwrap"      : true
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "private"       : false,
        "lenient"       : true,
        "destination"   : "./docs",
        "template"      : "./node_modules/jaguarjs-jsdoc"
    }
}